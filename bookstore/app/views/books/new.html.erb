<h2>Add New Book</h2>

<%= form_for @book do |f| %>

	<div class="form-group">   <%# Book: Title %>
		<%= f.label :title %><br />
		<%= f.text_field :title, class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: ISBN  %>
		<%= f.label :isbn %><br />
		<%= f.text_field :isbn, class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: Category %>
		<%= f.label :category %><br />    <%# Select Box with categories list %>
		<%= f.select :category_id, Category.all.collect {|x| [x.name,x.id]}, {:include_blank => 'Select One'},class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: Author %>
		<%= f.label :author %><br />    <%# Select Box with authors list %>
		<%= f.select :author_id, Author.all.collect {|x| [x.first_name + ' ' + x.last_name, x.id]}, {:include_blank => 'Select One'},class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: Publisher %>
		<%= f.label :publisher %><br />    <%# Select Box with publishers list %>
		<%= f.select :publisher_id, Publisher.all.collect {|x| [x.name,x.id]}, {:include_blank => 'Select One'},class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: format %>
		<%= f.label :format %><br />
		<%= f.text_field :format, class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: format %>
		<%= f.label :year %><br />
		<%= f.text_field :year, class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: format %>
		<%= f.label :coverpath %><br />
		<%= f.text_field :coverpath, class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: excerpt %>
		<%= f.label :excerpt %><br />
		<%= f.text_area :excerpt, class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: pages %>
		<%= f.label :pages %><br />
		<%= f.number_field :pages, class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: price %>
		<%= f.label :price %><br />
		<%= f.text_field :price, class:'form-control' %><br />
	</div>

	<div class="form-group">   <%# Book: buy %>
		<%= f.label :buy %><br />
		<%= f.text_field :buy, class:'form-control' %><br />
	</div>

	<%= f.submit "Submit", class:'btn btn-primary' %><br />
	<%= link_to "Cancel", books_path, class:'btn btn-default' %>

<% end %>