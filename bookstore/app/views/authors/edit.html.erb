<h2>Edit Author</h2>

<%= form_for @author do |f| %>
	<!-- Check for errors -->
	<% if @author.errors.any? %>
		<% @author.errors.full_messages.each do |msg| %>
			<!-- Show Errors -->
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>

	<div class="form-group">
		<%= f.label :first_name %><br />		<%# Author - First Name %>
		<%= f.text_field :first_name , class:'form-control' %><br />
	</div>
	<div class="form-group">
		<%= f.label :last_name %><br />		<%# Author - Last Name %>
		<%= f.text_field :last_name , class:'form-control' %><br />
	</div>

	<%= f.submit "Submit", class:'btn btn-primary' %><br />
	<%= link_to "Cancel", authors_path, class:'btn btn-default' %>

<% end %>
